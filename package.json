{
  "name": "llm-desktop-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "cd renderer && npm run dev",
    "dev:electron": "wait-on http://localhost:5173 && electronmon .",
    "build:ui": "cd renderer && npm ci --no-audit --no-fund && npm run build",
    "build:main": "webpack --config webpack.main.config.js",
    "build:preload": "webpack --config webpack.renderer.config.js",
    "build:webpack": "npm run build:main && npm run build:preload",
    "build": "npm run build:ui && electron-builder",
    "build:deb": "npm run build:ui && electron-builder --linux deb",
    "build:linux": "npm run build:ui && electron-builder --linux"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "wait-on": "^8.0.4",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "electronmon": {
    "pattern": [
      "!renderer",
      "!renderer/**/*"
    ]
  },
  "dependencies": {
    "@tetherto/qvac-sdk": "^0.1.0",
    "bare-runtime-linux-x64": "^1.22.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mongoose": "^8.18.1"
  },
  "build": {
    "appId": "com.llm-desktop.app",
    "productName": "LLM Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asarUnpack": [
      "node_modules/@tetherto/qvac-sdk/**/*",
      "node_modules/bare-runtime-linux-x64/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development",
      "maintainer": "LLM Desktop Team",
      "vendor": "LLM Desktop",
      "synopsis": "AI-powered desktop application",
      "description": "A desktop application for AI-powered conversations and document processing"
    }
  }
}
